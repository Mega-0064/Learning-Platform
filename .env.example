# React Learning Platform - Environment Variables
# Copy this file to .env and update the values for your environment

# -------------------------------------------------
# API Configuration
# -------------------------------------------------

# Application Environment (development, staging, production)
REACT_APP_ENV=development

# API Base URLs
REACT_APP_API_URL=https://api.learning-platform.com/v1
REACT_APP_DEV_API_URL=http://localhost:8000/api/v1
REACT_APP_STAGING_API_URL=https://staging-api.learning-platform.com/v1
REACT_APP_PROD_API_URL=https://api.learning-platform.com/v1

# -------------------------------------------------
# Authentication Configuration
# -------------------------------------------------

# JWT Token settings
REACT_APP_TOKEN_EXPIRY=3600            # Access token expiry in seconds (1 hour)
REACT_APP_REFRESH_TOKEN_EXPIRY=604800  # Refresh token expiry in seconds (7 days)

# Password Reset
REACT_APP_PASSWORD_RESET_EXPIRY=3600   # Password reset token expiry in seconds (1 hour)

# Email Verification
REACT_APP_EMAIL_VERIFICATION_REQUIRED=true
REACT_APP_EMAIL_VERIFICATION_EXPIRY=86400  # Email verification token expiry in seconds (24 hours)

# -------------------------------------------------
# Social Authentication
# -------------------------------------------------

# Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
REACT_APP_GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Facebook OAuth
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
REACT_APP_FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# -------------------------------------------------
# Feature Flags
# -------------------------------------------------

# Enable/disable features
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_PASSWORD_RESET=true
REACT_APP_ENABLE_EMAIL_VERIFICATION=true

# -------------------------------------------------
# Analytics & Monitoring
# -------------------------------------------------

# Google Analytics (optional)
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error tracking (optional)
REACT_APP_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id

